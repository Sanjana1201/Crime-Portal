<div class="row" style="padding-bottom: 20px;padding-top: 40px;margin-right: 0px;">
  <div class="col-lg-6 col-md-6 col-sm-12 text-center" style="margin-bottom: 10px">
    <a href="police_add"><input  type="button" name="add" value="Add Police Officers" class="btn btn-primary"></a>
  </div>
  <br>
  <div class="col-lg-3 col-md-3 col-sm-3 text-center">
    <form action="/deletePolice" method="post">
      <input type="text" placeholder="&nbsp Police Id" required class="form-control" name="policeId" autocomplete="off">
      <button type="submit" name="button" class="btn btn-danger"style="margin-top: 10px; margin-left: 9%;" value="<%= stateName %>">Delete Police</button>
    </form>
  </div>
</div>

   <div style="padding:50px;">
  <table class="table table-bordered">
   <thead class="thead-dark" style="background-color: black; color: white;">
     <tr>
       <th scope="col">Police Id</th>
       <th scope="col">Police Name</th>
       <th scope="col">Specialist</th>
       <th scope="col">Location</th>
     </tr>
   </thead>

   <tbody style="background-color: white; color: black;">
     <%  requestedPolice.forEach(function(police){  %>
     <tr>
       <td><%= police._id %></td>
       <td><%= police.name %></td>
       <td><%= police.specialist %></td>
       <td><%= police.location %>, <%= police.state %></td>
<%     });  %>
     </tr>
   </tbody>

</table>
