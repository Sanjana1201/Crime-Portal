<div class="container-fluid" align="center">
  <br>
<div class="bg-agile col-lg-4 col-md-9 col-sm-9" style="background-color: #d5dbb3;border-radius: 15px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.29), 0 6px 20px 0 rgba(0, 0, 0, 0.29); " align="left">
<br>
<h1 align="center">Welcome <%= currentUser %>'s Incharge</h1>
<h4 class="text-muted" align="center">Log New Police Officer</h4>
  <br>
  <form class="" action="/police_add" method="post" autocomplete="off">
    <div class="form-group container-fluid col-9">
      <label>Police Name</label>
      <input class="form-control" type="text" name="policeName" required="true" placeholder="Enter Name">
      <br>
      <label>Specialist</label>
      <select class="form-control" name="policeSpecialist" required="true" placeholder="Select Speciality">
        <option value="" disabled selected hidden class="text-muted">Select Crime</option>
         <option>Theft</option>
         <option>Robbery</option>
         <option>Pick Pocket</option>
         <option>Murder</option>
         <option>Rape</option>
         <option>Molestation</option>
         <option>Kidnapping</option>
         <option>Missing Person</option>
        </select>
      <br>
      <label>Location of Police Officer</label>
      <textarea name="location" rows="2" cols="10" class="form-control"required="true" placeholder="Enter Location"></textarea>
      <br>
      <label>State of Police Officer</label>
      <input type="text" name="state" disabled class="form-control" value="<%= currentUser %>" required="true">
      <br>
      <label>Police ID</label>
      <input type="text" name="policeid" required="true" placeholder="Enter police ID" class="form-control">
      <br>
      <label>Police Password</label>
      <input type="text" name="policepassword" required="true" placeholder="Enter police password" class="form-control">
    </div>
    <br>
    <div class="d-grid gap-2 col-9 mx-auto">
      <button class="btn btn-dark" type="submit" name="button" style="margin-bottom: 50px" value="<%= currentUser %>">Submit</button>
    </div>
  </form>
</div>
